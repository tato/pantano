<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/food_name_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/food_dialog_name_hint"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/food_calories_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/food_dialog_calories_hint"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/food_name_edit"
        app:layout_constraintTop_toBottomOf="@+id/food_name_edit"
        android:importantForAutofill="no" />

    <Spinner
        android:id="@+id/food_calorie_unit_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/food_calories_edit"
        app:layout_constraintEnd_toEndOf="@+id/food_name_edit"
        app:layout_constraintStart_toEndOf="@+id/food_calories_edit"
        app:layout_constraintTop_toTopOf="@+id/food_calories_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>